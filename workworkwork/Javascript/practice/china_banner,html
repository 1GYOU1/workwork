  <script>
//중국어 공통 배너
(function(){
    var evtBanChinaItem = document.querySelector('.evt_ban_china');

    if(evtBanChinaItem && evtBanChinaItem.dataset.chinaBannerType && evtBanChinaItem.dataset.chinaBanner) {
        var evtBanChinaType = evtBanChinaItem.dataset.chinaBannerType;
        var evtBanChinaList = evtBanChinaItem.dataset.chinaBanner.split(' ').filter(function(item) { return item != ''});
        var chinaBannerData = {
            Banner1: {
                href: '/?c=event&evt_id=22040501',
                src: '//gscdn.hackers.co.kr/champ/img/china/common/banner/' + evtBanChinaType + '/china_banner_1.jpg'
            },
            Banner2: {
                href: '/?c=event&evt_id=20071403',
                src: '//gscdn.hackers.co.kr/champ/img/china/common/banner/' + evtBanChinaType + '/china_banner_2.jpg'
            },
            Banner3: {
                href: '/?c=event&evt_id=22050401',
                src: '//gscdn.hackers.co.kr/champ/img/china/common/banner/' + evtBanChinaType + '/china_banner_3.jpg'
            },
            Banner4: {
                href: '/?c=event&evt_id=22050401',
                src: '//gscdn.hackers.co.kr/champ/img/china/common/banner/' + evtBanChinaType + '/china_banner_4.jpg'
            },
            Banner5: {
                href: '/?c=event&evt_id=22042501',
                src: '//gscdn.hackers.co.kr/champ/img/china/common/banner/' + evtBanChinaType + '/china_banner_5.jpg'
            },
            Banner6: {
                href: '/?c=event&evt_id=19091100',
                src: '//gscdn.hackers.co.kr/champ/img/china/common/banner/' + evtBanChinaType + '/china_banner_6.jpg'
            },
            Banner7: {
                href: '/?c=event&evt_id=19010400',
                src: '//gscdn.hackers.co.kr/champ/img/china/common/banner/' + evtBanChinaType + '/china_banner_7.jpg'
            },
            Banner8: {
                href: '/?c=event&evt_id=20042303',
                src: '//gscdn.hackers.co.kr/champ/img/china/common/banner/' + evtBanChinaType + '/china_banner_8.jpg'
            },
            Banner9: {
                href: 'https://www.hackers.ac/contents/?m=landing&v=china%2Fspeakingcamp',
                src: '//gscdn.hackers.co.kr/champ/img/china/common/banner/' + evtBanChinaType + '/china_banner_9.jpg'
            }

        };

        evtBanChinaList.forEach(function (Num) {
            var a   = document.createElement('a');
            var img = document.createElement('img');

            img.src = chinaBannerData['Banner'+ Num].src;

            a.target = '_blank';
            a.href  = chinaBannerData['Banner'+ Num].href;

            a.appendChild(img);
            evtBanChinaItem.appendChild(a);
        });
    }
})();

</script>
